<h1>Hello <%= current_user.email %>!</h1>

<%= form_with url: movies_path, method: :get, local: true do |form| %>
  <%= form.text_field(:search, value: ("Search by movie title"))%><br>
  <%= form.submit('Find Movies') %>
<% end %><br>

<%= button_to 'Find Top Rated Movies', movies_path,
 params: { q: :top_rated }, method: :get %><br>

  <% @movies.each do |movie| %>
    <p><%= link_to movie.title, "/movies/#{movie.api_id}" %>               Vote Average: <%= movie.rating %></p>
  <% end %>

  <%if @movies.empty? %>
    <p><%= "No movies matched your search and you should feel bad" %></p>
  <% end  %>
