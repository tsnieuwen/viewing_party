<%= form_with model: @user, local: true do |f| %>
<body>
    <div id="login">
        <h3 class="text-center text-white pt-5"></h3>
        <div class="container">
            <div id="login-row" class="row justify-content-center align-items-center">
                <div id="login-column" class="col-md-6">
                    <div id="login-box" class="col-md-12">
                            <h3 class="text-center text-info">Register</h3>
                            <div class="form-group">
                                <label for="username" class="text-info"><%= f.label :email, 'Email' %></label><br>
                                <%= f.text_field :email %>
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info"><%= f.label :password, 'Password' %></label><br>
                                <%= f.password_field :password %>
                            </div>
                            <div class="form-group">
                                <label for="password" class="text-info"><%= f.label :password_confirmation %></label><br>
                                <%= f.password_field :password_confirmation %>
                            </div>
                            <div class="form-group">
                                <%= f.submit "Register User", {class:"btn btn-info btn-md"} %>
                            </div>
                            <% end %>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>


